{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./lib",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020"
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
